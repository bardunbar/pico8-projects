{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "launch pico8",
            "type": "shell",
            "command": "${workspaceFolder}/../pico8.exe -windowed 1 ${file}",
        },
        {
            "label": "publish",
            "type": "shell",
            "command": "butler push builds\\${fileBasenameNoExtension}_html\\${fileBasenameNoExtension}.zip dunbargames/pico-jam:html5",
            "dependsOrder": "sequence",
            "dependsOn":[
                "export"
            ]
        },
        {
            "label": "export",
            "type": "shell",
            "command": ".\\tools\\export.bat ${relativeFile} ${fileBasenameNoExtension}"
        }
    ]
}